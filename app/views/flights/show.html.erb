<div class="container">
<p id="notice"><%= notice %></p>

<h1>Flight Details</h1>

<table class="table table-bordered">
  <tr align="center">
    <th> Departure </th>
    <th> Arrival </th>
    <th> Destination </th>
    <th> Baggage Allowance </th>
    <th> Capacity </th>
    <th> </th>
  </tr>
  <tr align="center">
    <td> <%= @flight.departure %> </td>
    <td> <%= @flight.arrival %> </td>
    <td> <%= @flight.destination %> </td>
    <td> <%= @flight.baggage %> </td>
    <td> <%= @flight.capacity %> </td>
    <td>
      <button class="btn btn-outline-success btn-block"> 
        <%= link_to 'Edit', edit_flight_path(@flight) %> 
      </button>
    </td>
  </tr>
</table>



<%= render "list_seat", seats: @flight.seats %>

<br>

<%= render "new_seat", seat: Seat.new, f_id: @flight.id %>

</div>