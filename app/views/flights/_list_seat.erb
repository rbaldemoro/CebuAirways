<p id="notice"><%= notice %></p>

<h1>Seats</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Baggage</th>
      <th>Flight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <!-- remove @ sign while using partial -->
    <% seats.each do |seat| %>
      <tr>
        <td><%= seat.name %></td>
        <td><%= seat.baggage %></td>
        <td><%= seat.flight_id %></td>
        <td><%= link_to 'Show', seat %></td>
        <td><%= link_to 'Edit', edit_seat_path(seat) %></td>
        <td><%= link_to 'Destroy', seat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
